@using TheSkein.Web.Controllers
@model TheSkein.Web.Models.LoginForm

@using (Html.BeginUmbracoForm<AuthenticationController>("Login", FormMethod.Post))
{
    if (ViewBag.Status != null)
    {
        <div class="alert">@ViewBag.Status</div>
    }
    <div class="form-group">
        @Html.LabelFor(m => m.Username, "Username")
        @Html.TextBoxFor(m => m.Username, new { placeholder = "Your e-mail address" })
        @Html.ValidationMessageFor(m => m.Username)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, "Password")
        @Html.PasswordFor(m => m.Password, new { placeholder = "Minimum of 8 characters" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <div class="form-group row">
        <div class="col-s-1 col-xxs-2">
            @Html.CheckBoxFor(m => m.RememberMe, new {@class = "span3"})
        </div>
        <div class="col-s-11 col-xxs-10">
            @Html.LabelFor(m => m.RememberMe, "Remember me")
        </div>
        @Html.ValidationMessageFor(m => m.RememberMe)
    </div>
    <button type="submit">Login</button>
   
}